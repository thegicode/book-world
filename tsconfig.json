{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es2016",
        "lib": ["ES6", "ESNext", "DOM", "DOM.Iterable", "ScriptHost"],
        "module": "ESNext",
        "strict": true,
        "esModuleInterop": true,
        // "outDir": "app/public/scripts",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "types": ["jest"],
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        // "baseUrl": "./app",
        // "paths": {
        //     "@components/*": ["scripts/components/*"],
        //     "@modules/*": ["scripts/modules/*"],
        //     "@pages/*": ["scripts/pages/*"],
        //     "@utils/*": ["scripts/utils/*"]
        // },
        "noEmit": true,
        "sourceMap": true
    },
    "include": ["app/src/**/*.ts"],
    "exclude": ["node_modules", "app/__tests__", "server/**.ts"]
}
