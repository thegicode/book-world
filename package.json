{
    "name": "book-world",
    "version": "1.0.0",
    "description": "",
    "main": "server/index",
    "scripts": {
        "start": "npm run start-dev",
        "start-dev": "npm run work & NODE_ENV=development node server",
        "start-prod": "npm run build & NODE_ENV=production node server",
        "work": "concurrently \"npm:html-watch\" \"npm:css-dev\" \"npm:tsc\" \"npm:esbuild-dev\"",
        "build": "concurrently \"npm:html-prod\" \"npm:css-prod\" \"npm:esbuild-prod\"",
        "tsc": "npx tsc --project ./server -w & npx tsc --project ./app -w",
        "esbuild-dev": "esbuild dev/src/pages/**/index.js --outdir=dev/js --bundle --watch --sourcemap",
        "esbuild-prod": "esbuild dev/src/pages/**/index.js --outdir=prod/js --bundle --minify",
        "css-dev": "npx sass ./app/sass/:./dev/css/ --style=expanded --source-map --watch",
        "css-prod": "npx sass ./app/sass/:./prod/css/ --style=compressed --no-source-map",
        "html-dev": "html-minifier-terser --input-dir app/markup --output-dir dev/html --file-ext html -c html.config.json",
        "html-prod": "html-minifier-terser --input-dir app/markup --output-dir prod/html --file-ext html -c html.config.json",
        "html-watch": "nodemon --watch app/markup --ext html --exec \"npm run html-dev\"",
        "eslint": "eslint app --ext .ts",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/thegicode/book-world.git"
    },
    "author": "thegi.code@gmail.com",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/thegicode/book-world/issues"
    },
    "homepage": "https://github.com/thegicode/book-world#readme",
    "devDependencies": {
        "@types/express": "^4.17.17",
        "@types/fs-extra": "^11.0.1",
        "@types/node": "^18.15.11",
        "@typescript-eslint/eslint-plugin": "^5.55.0",
        "@typescript-eslint/parser": "^5.55.0",
        "chokidar": "^3.5.3",
        "concurrently": "^8.0.1",
        "dotenv": "^16.0.3",
        "esbuild": "^0.17.13",
        "eslint": "^8.36.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-plugin-typescript": "^0.14.0",
        "express": "^4.17.3",
        "fs-extra": "^11.1.1",
        "html-minifier-terser": "^7.1.0",
        "nodemon": "^2.0.22",
        "sass": "^1.49.9",
        "typescript": "^5.0.2"
    }
}
