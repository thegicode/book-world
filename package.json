{
    "name": "book-world",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "start": "npm run start:dev",
        "start:dev": "NODE_ENV=development node index && npm run local",
        "start:prod": "NODE_ENV=production node index && npm run build",
        "local": "npm run tsc && npm run esbuild-dev && npm run css-dev && npm run watch-html",
        "build": "npm run esbuild-prod && npm run css-prod &&  npm run html-prod",
        "tsc": "tsc -w",
        "esbuild-dev": "esbuild src/script/pages/**/index.js --outdir=src/js --bundle --watch --sourcemap",
        "esbuild-prod": "esbuild src/script/pages/**/index.js --outdir=dist/js --bundle --minify",
        "css-dev": "npx sass ./src/sass/:./src/css/ --style=expanded --source-map --watch",
        "css-prod": "npx sass ./src/sass/:./dist/css/ --style=compressed --no-source-map",
        "html-dev": "html-minifier-terser --input-dir src/html-work-in --output-dir src/html --file-ext html -c html.config.json",
        "html-prod": "html-minifier-terser --input-dir src/html-work-in --output-dir dist/html --file-ext html -c html.config.json",
        "watch-html": "nodemon --watch src/html-work-in --ext html --exec \"npm run html-dev\"",
        "eslint": "eslint src --ext .ts",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/thegicode/book-world.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/thegicode/book-world/issues"
    },
    "homepage": "https://github.com/thegicode/book-world#readme",
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.55.0",
        "@typescript-eslint/parser": "^5.55.0",
        "esbuild": "^0.17.13",
        "eslint": "^8.36.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-plugin-typescript": "^0.14.0",
        "express": "^4.17.3",
        "html-minifier-terser": "^7.1.0",
        "nodemon": "^2.0.22",
        "sass": "^1.49.9",
        "typescript": "^5.0.2"
    },
    "dependencies": {
        "dotenv": "^16.0.3"
    }
}
