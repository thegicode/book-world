{
    "name": "book-world",
    "version": "1.0.0",
    "description": "",
    "main": "server/index",
    "scripts": {
        "start": "npm run start-dev",
        "start-dev": "npm run work & NODE_ENV=development node server/dist",
        "start-prod": "npm run build & NODE_ENV=production node server/dist",
        "work": "concurrently \"npm:html-watch\" \"npm:css-dev\" \"npm:tsc\" \"npm:esbuild-dev\"",
        "build": "concurrently \"npm:html-prod\" \"npm:css-prod\" \"npm:esbuild-prod\"",
        "tsc": "npx tsc -w & npx tsc --project ./server/src",
        "esbuild-dev": "esbuild app/public/scripts/pages/**/index.js --outdir=app/public/js --bundle --watch --sourcemap",
        "esbuild-prod": "esbuild app/public/scripts/pages/**/index.js --outdir=app/build/js --bundle --minify",
        "css-dev": "npx sass ./app/src/scss/:./app/public/css/ --style=expanded --source-map --watch",
        "css-prod": "npx sass ./app/src/scss/:./app/build/css/ --style=compressed --no-source-map",
        "html-dev": "html-minifier-terser --input-dir app/src/markup --output-dir app/public/html --file-ext html -c html.config.json",
        "html-prod": "html-minifier-terser --input-dir app/src/markup --output-dir app/build/html --file-ext html -c html.config.json",
        "html-watch": "nodemon --watch app/src/markup --ext html --exec \"npm run html-dev\"",
        "eslint": "eslint app --ext .ts",
        "test": "jest"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/thegicode/book-world.git"
    },
    "author": "thegi.code@gmail.com",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/thegicode/book-world/issues"
    },
    "homepage": "https://github.com/thegicode/book-world#readme",
    "devDependencies": {
        "@babel/core": "^7.21.4",
        "@babel/parser": "^7.21.4",
        "@babel/preset-env": "^7.21.4",
        "@babel/preset-typescript": "^7.21.4",
        "@babel/types": "^7.21.4",
        "@jest/globals": "^29.5.0",
        "@types/babel__core": "^7.20.0",
        "@types/babel__generator": "^7.6.4",
        "@types/babel__template": "^7.4.1",
        "@types/babel__traverse": "^7.18.3",
        "@types/express": "^4.17.17",
        "@types/fs-extra": "^11.0.1",
        "@types/jest": "^29.5.0",
        "@types/node": "^18.16.3",
        "@typescript-eslint/eslint-plugin": "^5.55.0",
        "@typescript-eslint/parser": "^5.55.0",
        "babel-jest": "^29.5.0",
        "cheerio": "^1.0.0-rc.12",
        "chokidar": "^3.5.3",
        "concurrently": "^8.0.1",
        "dotenv": "^16.0.3",
        "esbuild": "^0.17.13",
        "eslint": "^8.36.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-plugin-typescript": "^0.14.0",
        "express": "^4.17.3",
        "fs-extra": "^11.1.1",
        "html-minifier-terser": "^7.1.0",
        "install": "^0.13.0",
        "jest": "^29.5.0",
        "jest-environment-jsdom": "^29.5.0",
        "nodemon": "^2.0.22",
        "npm": "^9.6.3",
        "sass": "^1.49.9",
        "ts-jest": "^29.1.0",
        "ts-node": "^10.9.1"
    },
    "dependencies": {
        "intersection-observer": "^0.12.2",
        "typescript": "^4.5.4"
    }
}
